# ==============================================
# ARIA Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================

# -----------------
# JWT Secrets
# -----------------
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here-replace-with-random-32-byte-string
JWT_REFRESH_SECRET=your-refresh-secret-here-replace-with-different-32-byte-string

# -----------------
# LLM Providers (at least one required)
# -----------------
# Claude (Anthropic) - Recommended
CLAUDE_API_KEY=sk-ant-xxx

# Gemini (Google)
GEMINI_API_KEY=AIzaSy...

# OpenAI
OPENAI_API_KEY=sk-xxx

# Groq (fast inference)
GROQ_API_KEY=gsk-xxx

# -----------------
# Database
# -----------------
DATABASE_URL=file:/data/aria.db

# -----------------
# Redis
# -----------------
REDIS_URL=redis://redis:6379

# -----------------
# Service URLs (internal Docker networking)
# -----------------
VITE_API_URL=http://localhost:5001
AGENT_URL=http://agent:8000
BACKEND_URL=http://backend:5000

# -----------------
# Node Environment
# -----------------
NODE_ENV=development

# -----------------
# Optional: Google Calendar Integration
# -----------------
# GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=xxx

# -----------------
# Optional: News API
# -----------------
# NEWSAPI_KEY=xxx

# -----------------
# Optional: Weather API
# -----------------
# OPENWEATHER_API_KEY=xxx
